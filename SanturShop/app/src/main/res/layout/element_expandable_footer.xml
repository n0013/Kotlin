<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:backgroundTint="#E8E9EC"    app:cardElevation="0dp"    >    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginStart="10dp"        android:layout_marginEnd="10dp"        app:cardElevation="0dp"        >        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/item_constr"            android:layout_width="match_parent"            android:layout_height="85dp"            >            <TextView                android:id="@+id/item_more_products"                style="@style/Caption_Regular13"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="Еще 15 товаров в заказе"                android:textColor="@color/type_gray50"                android:visibility="gone"                android:layout_marginTop="8dp"                android:layout_marginStart="16dp"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <TextView                android:id="@+id/item_btn_details"                style="@style/ButtonBase"                android:tag="item_btn_details"                android:layout_width="111dp"                android:layout_height="32dp"                android:layout_marginTop="8dp"                android:layout_marginStart="16dp"                android:background="@drawable/btn_active"                android:gravity="center"                android:text="Подробнее"                android:textColor="@color/white"                android:visibility="visible"                android:foreground="?android:attr/selectableItemBackground"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toBottomOf="@+id/item_more_products" />            <TextView                android:id="@+id/item_btn_repeat"                style="@style/ButtonBase"                android:layout_width="109dp"                android:layout_height="32dp"                android:layout_marginStart="10dp"                android:background="@drawable/btn_gray"                android:text="Повторить"                android:textColor="@color/primary"                android:gravity="center"                android:visibility="invisible"                android:foreground="?android:attr/selectableItemBackground"                app:layout_constraintBottom_toBottomOf="@+id/item_btn_details"                app:layout_constraintStart_toEndOf="@+id/item_btn_details"                app:layout_constraintTop_toTopOf="@+id/item_btn_details">            </TextView>            <TextView                android:id="@+id/item_number_order"                android:tag="item_number_order"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:text="номер заказа"                android:visibility="invisible"                app:layout_constraintBottom_toBottomOf="@+id/item_btn_repeat"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toEndOf="@+id/item_btn_repeat"                app:layout_constraintTop_toTopOf="@+id/item_btn_repeat" />        </androidx.constraintlayout.widget.ConstraintLayout>    </androidx.cardview.widget.CardView></androidx.cardview.widget.CardView>