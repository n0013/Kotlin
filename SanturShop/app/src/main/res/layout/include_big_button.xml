<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/some_big_btn_page"    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="48dp"    >    <TextView        android:id="@+id/some_big_btn_active"        android:tag="some_big_btn_active"        style="@style/Button"        android:textColor="@color/white"        android:background="@drawable/btn_active"        android:foreground="?android:attr/selectableItemBackground"        android:layout_width="match_parent"        android:layout_height="48dp"        android:gravity="center"        android:text="some text big btn"        android:visibility="visible"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/rcv_text_edit"        />    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/some_big_btn_deactive"        android:layout_width="match_parent"        android:layout_height="48dp"        android:layout_marginStart="16dp"        android:layout_marginEnd="16dp"        android:background="@drawable/btn_disable"        android:visibility="gone"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toBottomOf="@+id/rcv_text_edit">        <ProgressBar            android:layout_width="16dp"            android:layout_height="16dp"            android:theme="@style/LoadProgress"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">        </ProgressBar>    </androidx.constraintlayout.widget.ConstraintLayout>    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/some_big_btn_active_page"        style="@style/Button"        android:layout_width="match_parent"        android:layout_height="48dp"        android:background="@drawable/btn_active"        android:foreground="?android:attr/selectableItemBackground"        android:visibility="gone"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <TextView            android:id="@+id/some_big_btn_active1"            android:tag="some_big_btn_active1"            style="@style/Button"            android:textColor="@color/white"            android:layout_width="272dp"            android:layout_height="48dp"            android:layout_marginStart="0dp"            android:layout_marginEnd="0dp"            android:background="@drawable/btn_active"            android:paddingStart="24dp"            android:gravity="center_vertical"            android:textAlignment="textStart"            tools:ignore="RtlCompat"            android:text="Добавить в корзину"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toBottomOf="@+id/rcv_text_edit"            />        <TextView            android:id="@+id/some_big_btn_active2"            android:tag="some_big_btn_active2"            style="@style/Button"            android:textColor="@color/white"            android:layout_width="100dp"            android:layout_height="48dp"            android:layout_marginStart="0dp"            android:layout_marginEnd="0dp"            android:background="@drawable/btn_active"            android:gravity="center"            android:text="по 25 м"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent" />    </androidx.constraintlayout.widget.ConstraintLayout>    <androidx.constraintlayout.widget.ConstraintLayout        android:id="@+id/some_big_btn_deactive_page"        style="@style/Button"        android:layout_width="match_parent"        android:layout_height="48dp"        android:visibility="gone"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <androidx.constraintlayout.widget.ConstraintLayout            android:id="@+id/some_big_btn_deactive_go_cart"            style="@style/Button"            android:layout_width="match_parent"            android:layout_height="48dp"            android:layout_marginStart="0dp"            android:layout_marginEnd="72dp"            android:background="@drawable/btn_deactive_gray"            android:foreground="?android:attr/selectableItemBackground"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent">            <TextView                android:id="@+id/some_big_btn_deactive1"                android:tag="some_big_btn_deactive1"                style="@style/Button"                android:textColor="@color/primary"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:background="@color/secondary"                android:gravity="center"                android:paddingTop="6dp"                android:text="Перейти в корзину"                app:layout_constraintEnd_toEndOf="parent"                app:layout_constraintStart_toStartOf="parent"                app:layout_constraintTop_toTopOf="parent" />            <Text